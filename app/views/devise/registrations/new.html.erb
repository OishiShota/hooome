<div class= 'all'>
  <%= render "shared/user_header" %>

  <div class='main'>
    アカウント作成
    <%= form_with model: @user, url: user_registration_path, class: 'user_form', local: true do |f| %>
     <%= render 'shared/error_messages', model: f.object %>

      <div class="field">
        <div>
          <%= f.label :name %>
        </div>
        <%= f.text_field :name, autofocus: true, maxlength:"8", placeholder: "8文字以内", class: "f_input-box" %>
      </div>

      <div class="field">
        <div>
          <%= f.label :address %>
        </div>
        <%= f.text_field :address, autofocus: true, maxlength:"8", placeholder: "@半角英数字混合", class: "f_input-box" %>
      </div>

      <div class="field">
        <div>
          <%= f.label :email %>
        </div>
        <%= f.email_field :email, autofocus: true, class: "f_input-box" %>
      </div>

      <div class="field">
        <div>
          <%= f.label :password %>
        </div>
        <%= f.password_field :password, placeholder: "半角英数字混合6文字以上", class: "f_input-box" %>
      </div>

      <div class="field">
        <div>
          <%= f.label :password_confirmation %>
        </div>
        <%= f.password_field :password_confirmation, class: "f_input-box" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <%= render "shared/home_footer" %>
</div>