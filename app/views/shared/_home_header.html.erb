<header class='home-header'>
  <div class="heading">
    <%= link_to 'Hooome🏠', root_path, class: "title" %>
  </div>
  <div class= "search-form">
    <%= form_with(url: "#", local: true, method: :get) do |form| %>
      <%= form.text_field :keyword, placeholder: " 掲示板を探す", class: "input-box" %>
      <%= form.submit "検索" ,class:"btn" %>
    <% end %>
  </div>
  <div class="menu">
    <% if user_signed_in? %>
      <span class="menu_text"><%= current_user.name %>
        <ul class="menu_list">
          <li><%= link_to "マイページ", "#", class: "menu_lists" %></br></li>
          <li><%= link_to "掲示板作成", new_home_path, class: "menu_lists" %></br></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete ,  class: "menu_lists" %></br></li>
        </ul>
      </span>
    <% else %>
      <span class="menu_text"><%= "アカウント" %>
        <ul class="menu_list">
          <li><%= link_to "新規作成", new_user_registration_path, class: "menu_lists" %></br></li>
          <li><%= link_to "ログイン", new_user_session_path, class: "menu_lists" %></br></li>
        </ul>
      </span>
    <%end%>
  </div>
</header>